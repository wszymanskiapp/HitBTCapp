<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CardView.Light">
        <item name="cardBackgroundColor">@color/cardview_light_background</item>
    </style>

    <style name="TextTitle">
        <item name="android:padding">5dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey500</item>
    </style>

    <style name="TextRatesHigh" parent="TextTitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextRatesLow" parent="TextTitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextRates" parent="TextTitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey800</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextTitleCenter" parent="TextTitle">
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextHeaderList" parent="TextTitle">
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/green100</item>
    </style>

</resources>
